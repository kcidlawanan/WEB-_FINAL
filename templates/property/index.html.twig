       {% extends is_granted('ROLE_ADMIN') ? 'admin.html.twig' : 'staff.html.twig' %}

        {% block title %}üèòÔ∏è Property Listings - Lawanan Real Estate{% endblock %}

        {% block body %}
        <style>
            /* PAGE HEADER */
            .page-header {
                background: linear-gradient(135deg, #2d3748 0%, #1a202c 100%);
                color: white;
                padding: 40px 20px;
                text-align: center;
                margin-bottom: 40px;
                border-radius: 10px;
                margin: 20px;
            }

            .page-header h1 {
                font-size: 2.2rem;
                font-weight: 700;
                margin: 0 0 10px 0;
                display: flex;
                align-items: center;
                justify-content: center;
                gap: 15px;
            }

            .page-header p {
                font-size: 1rem;
                margin: 0;
                opacity: 0.9;
                color: #cbd5e0;
            }

            /* MODERN PROPERTY CARD */
            .property-card {
                border: none;
                border-radius: 12px;
                overflow: hidden;
                background: #ffffff;
                box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
                transition: all 0.3s ease;
                height: 100%;
                display: flex;
                flex-direction: column;
                border-left: 5px solid #667eea;
            }

            .property-card:hover {
                transform: translateY(-6px);
                box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
            }

            /* IMAGE CONTAINER */
            .image-container {
                position: relative;
                width: 100%;
                height: 200px;
                overflow: hidden;
                background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e0 100%);
            }

            .property-image {
                width: 100%;
                height: 100%;
                object-fit: cover;
                transition: transform 0.4s ease;
            }

            .property-card:hover .property-image {
                transform: scale(1.05);
            }

            /* STATUS BADGE */
            .status-badge {
                position: absolute;
                top: 12px;
                right: 12px;
                padding: 6px 14px;
                border-radius: 20px;
                font-weight: 700;
                font-size: 0.75rem;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                z-index: 10;
            }

            .status-badge.for-sale {
                background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
                color: white;
            }

            .status-badge.for-rent {
                background: linear-gradient(135deg, #0dcaf0 0%, #06b6d4 100%);
                color: white;
            }

            /* PRICE BADGE */
            .price-badge {
                position: absolute;
                bottom: 12px;
                left: 12px;
                background: rgba(45, 55, 72, 0.95);
                padding: 10px 16px;
                border-radius: 8px;
                font-weight: 700;
                font-size: 1.1rem;
                color: #22c55e;
                box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            }

            /* CONTENT AREA */
            .property-content {
                padding: 20px;
                flex-grow: 1;
                display: flex;
                flex-direction: column;
            }

            .property-card h5 {
                font-weight: 700;
                margin-bottom: 10px;
                color: #2d3748;
                font-size: 1.2rem;
                line-height: 1.3;
            }

            .property-location {
                display: flex;
                align-items: center;
                color: #718096;
                margin-bottom: 10px;
                font-weight: 500;
                font-size: 0.95rem;
            }

            .property-location i {
                margin-right: 8px;
                color: #667eea;
            }

            .property-description {
                color: #4b5563;
                font-size: 0.9rem;
                line-height: 1.5;
                margin-bottom: 12px;
                flex-grow: 1;
            }

            /* PROPERTY META INFO */
            .property-meta {
                display: flex;
                justify-content: space-between;
                align-items: center;
                margin-bottom: 12px;
                padding-bottom: 12px;
                border-bottom: 1px solid #e2e8f0;
            }

            .meta-item {
                text-align: center;
            }

            .meta-icon {
                font-size: 1.3rem;
                display: block;
                margin-bottom: 4px;
            }

            .meta-label {
                font-size: 0.75rem;
                color: #718096;
                text-transform: uppercase;
                font-weight: 600;
                letter-spacing: 0.5px;
            }

            .meta-value {
                font-size: 1rem;
                font-weight: 700;
                color: #2d3748;
            }

            /* CATEGORY TAG */
            .category-tag {
                display: inline-block;
                background: #dbeafe;
                color: #1e40af;
                padding: 6px 12px;
                border-radius: 20px;
                font-size: 0.8rem;
                font-weight: 600;
                margin-bottom: 12px;
            }

            /* BUTTONS CONTAINER */
            .card-buttons {
                display: flex;
                gap: 8px;
                margin-top: auto;
            }

            .card-buttons .btn {
                flex: 1;
                border-radius: 6px;
                font-weight: 600;
                padding: 8px 10px;
                font-size: 0.85rem;
                transition: all 0.3s ease;
            }

            .btn-view-details {
                background: #667eea;
                border: none;
                color: white;
            }

            .btn-view-details:hover {
                background: #5568d3;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
            }

            .btn-buy {
                background: #22c55e;
                border: none;
                color: white;
            }

            .btn-buy:hover {
                background: #16a34a;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(34, 197, 94, 0.3);
            }

            /* GRID LAYOUT */
            .properties-grid {
                display: grid;
                grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
                gap: 24px;
                margin-bottom: 40px;
                padding: 20px;
            }

            /* EMPTY STATE */
            .empty-state {
                text-align: center;
                padding: 60px 20px;
                color: #718096;
            }

            .empty-state i {
                font-size: 4rem;
                color: #cbd5e0;
                margin-bottom: 20px;
            }

            .empty-state h3 {
                color: #2d3748;
                font-weight: 700;
                margin-bottom: 10px;
            }

            /* RESPONSIVE */
            @media (max-width: 768px) {
                .page-header h1 {
                    font-size: 1.8rem;
                }
                
                .properties-grid {
                    grid-template-columns: 1fr;
                    gap: 16px;
                }
                
                .image-container {
                    height: 180px;
                }
            }

            /* Smooth fade-out animation */
            .fade-out {
                opacity: 0;
                transition: opacity 0.5s ease-out;
            }
        </style>

        <!-- Page Header -->
        <div class="page-header">
            <h1>üèòÔ∏è Available Properties</h1>
            <p>Discover your perfect home or investment opportunity</p>
        </div>

        <div class="container">
            {% for message in app.flashes('success') %}
                <div id="flash-message" class="alert alert-success text-center fw-bold" style="margin-bottom: 30px;">
                    {{ message }}
                </div>
            {% endfor %}

            <!-- Properties Grid -->
            <div class="properties-grid">
                {% for property in properties %}
                    <div class="property-card">
                        <!-- Image Container -->
                        <div class="image-container">
                            {% if property.image %}
                                <img src="{{ asset('uploads/images/' ~ property.image) }}" alt="{{ property.title }}" class="property-image">
                            {% else %}
                                <img src="https://images.unsplash.com/photo-1502672260266-1c1ef2d93688?auto=format&fit=crop&w=600&q=80" alt="Default Property" class="property-image">
                            {% endif %}

                            <!-- Status Badge -->
                            {% if property.status == 'for_sale' %}
                                <span class="status-badge for-sale">‚úÖ For Sale</span>
                            {% elseif property.status == 'for_rent' %}
                                <span class="status-badge for-rent">üîë For Rent</span>
                            {% elseif property.status == 'sold' %}
                                <span class="status-badge" style="background: linear-gradient(135deg, #6c757d 0%, #495057 100%); color: white;">‚úì SOLD</span>
                            {% elseif property.status == 'rented' %}
                                <span class="status-badge" style="background: linear-gradient(135deg, #17a2b8 0%, #138496 100%); color: white;">‚úì RENTED</span>
                            {% endif %}

                            <!-- Price Badge -->
                            <div class="price-badge">
                                ‚Ç±{{ property.price|number_format(0, '.', ',') }}
                            </div>
                        </div>

                        <!-- Content -->
                        <div class="property-content">
                            <h5>{{ property.title }}</h5>

                            <!-- Location -->
                            <div class="property-location">
                                <i class="fas fa-map-marker-alt"></i>
                                <span>{{ property.location }}</span>
                            </div>

                            <!-- Category -->
                            {% if property.category %}
                                <span class="category-tag">üè∑ {{ property.category.name }}</span>
                            {% endif %}

                            <!-- Description -->
                            <p class="property-description">{{ property.description|slice(0, 80) }}...</p>

                            <!-- Meta Info -->
                            <div class="property-meta">
                                <div class="meta-item">
                                    <span class="meta-icon">üõèÔ∏è</span>
                                    <div class="meta-label">Bedrooms</div>
                                    <div class="meta-value">{{ property.bedrooms }}</div>
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="card-buttons">
                                <a href="{{ path('app_property_show', {'id': property.id}) }}" class="btn btn-view-details">
                                    View Details
                                </a>

                                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_STAFF') %}
                                    {% if property.status == 'for_sale' %}
                                        <form method="POST" action="{{ path('app_property_purchase', {'id': property.id}) }}" style="flex: 1;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('app_property_purchase' ~ property.id) }}">
                                            <button type="submit" class="btn btn-buy w-100" onclick="return confirm('Buy {{ property.title }}?')">
                                                üí≥ Buy
                                            </button>
                                        </form>
                                    {% elseif property.status == 'for_rent' %}
                                        <form method="POST" action="{{ path('app_property_rent', {'id': property.id}) }}" style="flex: 1;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('app_property_rent' ~ property.id) }}">
                                            <button type="submit" class="btn btn-rent w-100" onclick="return confirm('Rent {{ property.title }}?')">
                                                üîë Rent
                                            </button>
                                        </form>
                                    {% elseif property.status == 'sold' %}
                                        <button class="btn w-100" style="background-color: #6c757d; color: white; flex: 1;" disabled>
                                            ‚úì Sold
                                        </button>
                                    {% elseif property.status == 'rented' %}
                                        <button class="btn w-100" style="background-color: #17a2b8; color: white; flex: 1;" disabled>
                                            ‚úì Rented
                                        </button>
                                    {% endif %}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="empty-state" style="grid-column: 1/-1;">
                        <i class="fas fa-home"></i>
                        <h3>No Properties Found</h3>
                        <p>Check back soon for new listings!</p>
                    </div>
                {% endfor %}
            </div>
        </div>

        <script>
            document.addEventListener("DOMContentLoaded", function() {
                const flash = document.getElementById('flash-message');
                if (flash) {
                    setTimeout(() => {
                        flash.classList.add('fade-out');
                        setTimeout(() => flash.remove(), 500);
                    }, 3000);
                }
            });
        </script>

        {% endblock %}

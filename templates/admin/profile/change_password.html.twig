    .password-card {
        background: white;
        border-radius: 10px;
        padding: 40px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
        width: 100%;
        max-width: 450px;
    }

    .password-card h1 {
        font-size: 1.5rem;

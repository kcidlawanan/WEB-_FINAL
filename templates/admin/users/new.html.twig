{% extends 'base_admin.html.twig' %}

{% block title %}Create New User{% endblock %}

{% block body %}
<style>
    .form-container {
        max-width: 600px;
        margin: 40px auto;
    }

    .form-card {
        background: white;
        border-radius: 10px;
        padding: 35px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.08);
    }

    .form-card h1 {
        font-size: 1.8rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 10px;
        text-align: center;
    }

    .form-card .subtitle {
        font-size: 0.95rem;
        color: #718096;
        text-align: center;
        margin-bottom: 30px;
        padding-bottom: 20px;
        border-bottom: 2px solid #e2e8f0;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control, .form-select {
        border: 1px solid #cbd5e0;
        border-radius: 6px;
        padding: 10px 12px;
        font-size: 0.95rem;
        color: #2d3748;
        transition: all 0.3s ease;
    }

    .form-control:focus, .form-select:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .form-label {
        font-size: 0.95rem;
        font-weight: 600;
        color: #2d3748;
        margin-bottom: 8px;
        display: block;
    }

    .form-check {
        padding-left: 0;
    }

    .form-check-input {
        width: 20px;
        height: 20px;
        margin-top: 0.3rem;
        margin-right: 8px;
        border: 1px solid #cbd5e0;
        border-radius: 4px;
        cursor: pointer;
    }

    .form-check-input:checked {
        background-color: #667eea;
        border-color: #667eea;
    }

    .form-check-label {
        font-size: 0.95rem;
        color: #2d3748;
        margin-bottom: 8px;
        cursor: pointer;
    }

    .btn-submit {
        width: 100%;
        padding: 12px 20px;
        font-size: 1rem;
        font-weight: 600;
        color: white;
        background-color: #16a34a;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

    .btn-submit:hover {
        background-color: #15803d;
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(22, 163, 74, 0.4);
    }

    .btn-submit:active {
        transform: translateY(0);
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
        border-radius: 6px;
        padding: 12px 16px;
        margin-bottom: 20px;
        font-size: 0.95rem;
    }

    /* DataTables form styling override */
    .dataTables_wrapper .form-control,
    .dataTables_wrapper .form-select {
        border-color: #cbd5e0;
    }
</style>

<div class="form-container">
    <div class="form-card">
        <h1>Create New User</h1>
        <p class="subtitle"></p>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                <i class="fas fa-check-circle"></i> {{ message }}
            </div>
        {% endfor %}

        {{ form_start(form, {'attr': {'class': 'user-form', 'novalidate': true}}) }}
            <div class="form-group">
                <label class="form-label">Email Address</label>
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'user@example.com'}}) }}
                {% if form.email.vars.errors %}
                    <div class="text-danger small mt-2">
                        {% for error in form.email.vars.errors %}
                            <i class="fas fa-exclamation-circle"></i> {{ error.message }}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                <label class="form-label">User Role</label>
                <div style="border: 1px solid #cbd5e0; border-radius: 6px; padding: 12px;">
                    {% for choice in form.roles %}
                        <div class="form-check">
                            {{ form_widget(choice, {'attr': {'class': 'form-check-input'}}) }}
                            <label class="form-check-label" for="{{ choice.vars.id }}">
                                {{ choice.vars.label }}
                            </label>
                        </div>
                    {% endfor %}
                </div>
                {% if form.roles.vars.errors %}
                    <div class="text-danger small mt-2">
                        {% for error in form.roles.vars.errors %}
                            <i class="fas fa-exclamation-circle"></i> {{ error.message }}
                        {% endfor %}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                <label class="form-label">Password</label>
                {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Enter secure password', 'type': 'password'}}) }}
                {% if form.password.vars.errors %}
                    <div class="text-danger small mt-2">
                        {% for error in form.password.vars.errors %}
                            <i class="fas fa-exclamation-circle"></i> {{ error.message }}
                        {% endfor %}
                    </div>
                {% endif %}
                <small class="text-muted d-block mt-2"></small>
            </div>

            <button type="submit" class="btn-submit">
                <i class="fas fa-user-plus"></i> Create User
            </button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
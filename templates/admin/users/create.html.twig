{% extends 'base_admin.html.twig' %}

{% block title %}Create User{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Create User</h1>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_row(form.email) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.roles) }}
        </div>
        <div class="mb-3">
            {{ form_row(form.password) }}
        </div>

        <button class="btn btn-primary">Create User</button>
    {{ form_end(form) }}
</div>
{% endblock %}
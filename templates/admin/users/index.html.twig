{% extends 'base_admin.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-center">User Management</h2>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <div class="text-end mb-3">
        <a href="{{ path('admin_users_new') }}" class="btn btn-success">â• Create New User</a>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Date Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(', ') }}</td>
                <td>{{ user.createdAt|date('Y-m-d') }}</td>
                <td>
                    <a href="{{ path('admin_users_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">âœï¸ Edit</a>
                    <form method="post" action="{{ path('admin_users_delete', {'id': user.id}) }}" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">ğŸ—‘ï¸ Delete</button>
                    </form>
                    <form method="post" action="{{ path('admin_users_disable', {'id': user.id}) }}" style="display:inline;">
                        <button type="submit" class="btn btn-secondary btn-sm">ğŸš« Disable</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">No users found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
{% extends "base.html.twig" %}

{% block title %}403 - Access Denied{% endblock %}

{% block body %}
<div style="min-height: 80vh; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
    <div style="text-align: center; color: white;">
        <h1 style="font-size: 5rem; margin: 0; font-weight: bold;">403</h1>
        <h2 style="font-size: 2rem; margin: 1rem 0;">Access Denied</h2>
        <p style="font-size: 1.1rem; margin: 1rem 0; max-width: 600px; margin-left: auto; margin-right: auto;">
            {{ message|default('You do not have permission to access this resource. This action is restricted to authorized users only.') }}
        </p>
        <div style="margin-top: 2rem; display: flex; gap: 1rem; justify-content: center;">
            <a href="{{ path('app_home') }}" style="display: inline-block; padding: 0.75rem 1.5rem; background-color: rgba(255,255,255,0.2); color: white; text-decoration: none; border-radius: 4px; border: 2px solid white; font-weight: 500; transition: all 0.3s;">
                Back to Home
            </a>
            {% if app.user %}
                <a href="{{ path('app_profile') }}" style="display: inline-block; padding: 0.75rem 1.5rem; background-color: white; color: #667eea; text-decoration: none; border-radius: 4px; font-weight: 500; transition: all 0.3s;">
                    Go to Profile
                </a>
            {% else %}
                <a href="{{ path('app_login') }}" style="display: inline-block; padding: 0.75rem 1.5rem; background-color: white; color: #667eea; text-decoration: none; border-radius: 4px; font-weight: 500; transition: all 0.3s;">
                    Login
                </a>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
